{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SAPUsername": {
      "type": "string"
    },
    "SAPPassword": {
      "type": "securestring"
    },
    "SAPPackages": {
      "type": "array",
      "defaultValue": [
        "hostagent"
      ]
    }
  },
  "variables": {
    "resourcePrefix": "[concat('sap-', uniquestring(resourceGroup().id))]",
    "scriptName": "[concat(variables('resourcePrefix'), '-scr')]",
    "storageName": "[replace(variables('resourcePrefix'), '-', '')]",

    "identityName": "[concat(variables('resourcePrefix'), '-id')]",
    "identityRole": "[guid(resourceGroup().id, variables('identityName'), variables('roleDefinition_reader'))]",

    "roleDefinition_reader": "[concat(subscription().id, '/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-06-01",
      "name": "[variables('storageName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {}
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "name": "[variables('identityName')]",
      "apiVersion": "2018-11-30",
      "location": "[resourceGroup().location]"
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "name": "[variables('identityRole')]",
      "apiVersion": "2018-09-01-preview",
      "dependsOn": [
        "[variables('identityName')]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('roleDefinition_reader')]",
        "principalId": "[reference(variables('identityName')).principalId]"
      }
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[variables('scriptName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[variables('storageName')]",
        "[variables('identityRole')]"
      ],
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))]": { /*ttk bug*/ }
        }
      },
      "kind": "AzureCLI",
      "properties": {
        "forceUpdateTag": "[guid(deployment().name)]",
        "azCliVersion": "2.9.1",

        "timeout": "PT30M",
        "retentionInterval": "P1D",
        "cleanupPreference": "OnExpiration",

        "arguments": "[concat('-Packages ', replace(replace(string(parameters('SAPPackages')), '[', ''), ']', ''))]",
        "primaryScriptUri": "https://raw.githubusercontent.com/markusheiliger/devtestlab-sap/main/environments/sap-sandbox/scripts/downloader.sh",

        "storageAccountSettings": {
          "storageAccountName": "[variables('storageName')]",
          "storageAccountKey": "[listKeys(variables('storageName'),'2018-02-01').keys[0].value]"
        },

        "environmentVariables": [
          {
            "name": "SAPUsername",
            "value": "[parameters('SAPUsername')]"
          },
          {
            "name": "SAPPassword",
            "secureValue": "[parameters('SAPPassword')]"
          }
        ]
      }
    }
  ],
  "outputs": {
  }
}